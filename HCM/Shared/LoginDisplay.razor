<AuthorizeView>
    <Authorized>
        <ul class="navbar-nav flex-grow-1 flex-row-reverse">
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="/Logout">
                     <div class="align-items-center">
                        <span class="oi oi-account-logout" title="Logout" aria-hidden="true"></span> LogOut
                     </div> 
                </NavLink>
            </li>
            <li class="nav-item px-3">
                <NavLink class="nav-link">
                    <div class="align-items-center">
                        <span class="oi oi-person" aria-hidden="true"></span> @context.User.Claims.Where(c=>c.Type=="FullName").FirstOrDefault().Value.ToString()
                    </div>                    
                </NavLink>
            </li>
        </ul>
    </Authorized>
    <NotAuthorized>
        <ul class="nav navbar-nav flex-grow-1">
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="/Login">
                    <span class="oi oi-account-login" aria-hidden="true"></span> LogIn
                </NavLink>
            </li>           
        </ul>
    </NotAuthorized>
</AuthorizeView>