@using HCMApi
    
<h5 class="tLabel">@Localizer["Cases_Detail_Label_History"]</h5>
<div class="top_blue_bg"></div>

@if (Source?.Count > 0)
{
    @foreach (CaseEvent ce in Source)
    {
        <CaseEventPan Source="@ce"></CaseEventPan>
    }

}


@code {
    
    [Inject] private IStringLocalizer<App> Localizer { get; set; }

    
     [Parameter] public List<CaseEvent> Source { get; set; }
    
}
