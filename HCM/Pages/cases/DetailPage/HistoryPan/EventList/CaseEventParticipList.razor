@using HCMApi

@if(ParticipList?.Count > 0)
{
    <h5 class="itemDetail mt-3">@Localizer["Cases_Detail_Label_Users"]</h5>
    
    <div class="container bg-light">              
       
        @foreach (CaseContact c in ParticipList)
        {
            <div class="row">
                <div class="col-12 itemDetail">
                    @c.Name (@c.Email)
                </div>
            </div>
                       
        }    
        
    </div>
}
    
        

@code {

    [Inject] public IStringLocalizer<App> Localizer { get; set; }

    [Parameter] public string XmlParticipList { get; set; }


    protected List<CaseContact> ParticipList { get; set; } = new List<CaseContact>();



    protected override void OnParametersSet()
    {
        base.OnParametersSet();


        if(XmlParticipList?.IndexOf("<ContactList>") == 0)
        {
            try
            {
                ParticipList = CaseContactList.LoadFromXmlAsList(XmlParticipList);
            }
            catch { }
        }
       

    }

                                
}
