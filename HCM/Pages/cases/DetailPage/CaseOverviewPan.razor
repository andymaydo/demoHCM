        {
            <table class="table table-striped table-sm">              
              <tbody class="itemDetail">
                <tr>                  
                  <td>@Localizer.Str["Cases_Detail_Label_ProfileName"]</td>
                  <td>@Source.ProfileName</td>                  
                </tr>
                <tr>                  
                  <td>@Localizer.Str["Cases_Detail_Label_ID"]</td>
                  <td>@Source.CaseID</td>                  
                </tr> 
                @*<tr>                  
                  <td>@Localizer.Str["Cases_Detail_Label_Platform"]</td>
                  <td>@Source.appName</td>                  
                </tr>
                <tr>                  
                  <td>@Localizer.Str["Cases_Detail_Label_Category"]</td>
                  <td>@Source.CaseType</td>                  
                </tr>*@
                <tr>                  
                  <td>@Localizer.Str["Cases_Detail_Label_Source"]</td>
                  <td>@Source.CaseSource</td>                  
                </tr>
                 <tr>                  
                  <td>@Localizer.Str["Cases_Detail_Label_Status"]</td>
                  <td>@Localizer.Str["Case_Status_" + Source.CaseStatusID.ToString()]</td>                  
                </tr>
                 <tr>                  
                  <td>@Localizer.Str["Cases_Detail_Label_Result"]</td>
                  <td>@Localizer.Str["Case_Result_" + Source.CaseResultID.ToString()]</td>                  
