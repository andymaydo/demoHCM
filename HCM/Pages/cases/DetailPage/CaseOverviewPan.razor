                  <td>@Source.SapUser</td>                  
                </tr>
                <tr>                  
                  <td>@Localizer.Str["Cases_Detail_Label_LastModifyOn"]</td>
                  <td>@Source.LastActivity</td>                  
                </tr>
                <tr>                  
                  <td>@Localizer.Str["Cases_Detail_Label_Duration"]</td>
                  <td>@DaysFromMinutes(@Source.Duration)</td>                  
                </tr>
              </tbody>
            </table>

        }

    
         


@code {

    [Inject] private CommonLocalizationService Localizer { get; set; }


    [Parameter] public Case Source { get; set; }

    private string DaysFromMinutes(int minutes)
    {
        TimeSpan t = TimeSpan.FromMinutes(minutes);
        string answer = string.Format("{0:D2}d:{1:D2}h:{2:D2}m", 
                t.Days,
                t.Hours, 
                t.Minutes);

        return answer;
    }
}
